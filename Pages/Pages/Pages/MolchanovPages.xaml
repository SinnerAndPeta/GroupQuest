        <Button Content="Назад" x:Name="Gost_Копировать" HorizontalAlignment="Left" Margin="90,178,0,0" VerticalAlignment="Top" Width="75" FontFamily="Comic Sans MS" Background="#FF498C51" RenderTransformOrigin="0.036,0.508"/>

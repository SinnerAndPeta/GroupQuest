        <Button Content="Войти" x:Name="Vhod" HorizontalAlignment="Left" Margin="75,120,0,0" VerticalAlignment="Top" Width="75" FontFamily="Comic Sans MS" Background="#FF498C51"/>
        <Button Content="Гость" x:Name="Gost" HorizontalAlignment="Left" Margin="190,120,0,0" VerticalAlignment="Top" Width="75" FontFamily="Comic Sans MS" Background="#FF498C51" RenderTransformOrigin="0.036,0.508"/>
